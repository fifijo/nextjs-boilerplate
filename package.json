{
  "private": true,
  "scripts": {
    "prestart": "next build",
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:app": "turbo dev --filter app",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test:app": "turbo test:app",
    "test:watch": "turbo run test:watch",
    "prisma:init:development": "turbo prisma:generate && turbo prisma:migrate:dev"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "cross-env": "^7.0.3",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.19.1",
    "turbo": "^2.1.3",
    "vitest": "^2.1.3"
  },
  "packageManager": "pnpm@9.1.4",
  "engines": {
    "node": ">=18"
  },
  "name": "turborepo-nextjs-tailwindcss",
  "simple-git-hooks": {
    "pre-commit": "commitlint",
    "pre-push": "turbo build",
    "preserveUnused": true
  }
}
