{
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:app": "turbo dev --filter app",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "docker:dev:app": "cross-env PROJECT=app docker-compose -f ./docker/dev/docker-compose.yml up dev",
    "docker:build:app": "cross-env docker-compose -f ./docker/prod/docker-compose.yml build prod-app",
    "docker:prod:app": "docker-compose -f ./docker/prod/docker-compose.yml up prod-app"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "turbo": "^2.1.3",
    "tsx": "^4.19.1",
    "cross-env": "^7.0.3",
    "vitest": "^2.1.3",
    "tailwindcss": "^3.4.1"
  },
  "packageManager": "pnpm@9.1.4",
  "engines": {
    "node": ">=18"
  },
  "name": "turborepo-nextjs-tailwindcss"
}
