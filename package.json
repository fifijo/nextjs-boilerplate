{
  "private": true,
  "scripts": {
    "prestart": "next build",
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:app": "turbo dev --filter app",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "prisma:init": "turbo prisma:generate && turbo prisma:push && turbo prisma:seed",
    "docker:dev:down": "cross-env PROJECT=app docker-compose -f ./docker/dev/docker-compose.yml down",
    "docker:dev:stop": "cross-env PROJECT=app docker-compose -f ./docker/dev/docker-compose.yml stop",
    "docker:dev:app:build": "cross-env PROJECT=app docker-compose -f ./docker/dev/docker-compose.yml build --no-cache",
    "docker:dev:app:up": "cross-env PROJECT=app docker-compose -f ./docker/dev/docker-compose.yml up -d",
    "docker:prod:down": "docker-compose -f ./docker/prod/docker-compose.yml down",
    "docker:prod:stop": "docker-compose -f ./docker/prod/docker-compose.yml stop",
    "docker:prod:app:build": "cross-env docker-compose -f ./docker/prod/docker-compose.yml build --no-cache prod-app",
    "docker:prod:app:up": "docker-compose -f ./docker/prod/docker-compose.yml up -d prod-app"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "turbo": "^2.1.3",
    "tsx": "^4.19.1",
    "cross-env": "^7.0.3",
    "vitest": "^2.1.3",
    "tailwindcss": "^3.4.1"
  },
  "packageManager": "pnpm@9.1.4",
  "engines": {
    "node": ">=18"
  },
  "name": "turborepo-nextjs-tailwindcss"
}
