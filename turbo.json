{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test:app": {
      "outputs": []
    },
    "test:watch": {
      "cache": false
    },
    "prisma:generate": {
      "cache": false
    },
    "prisma:migrate:dev": {
      "cache": false
    },
    "type-check": {
      "cache": false,
      "persistent": true
    }
  }
}