{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^prisma:generate", "^prisma:push"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "dependsOn": ["^prisma:generate", "^prisma:push"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "outputs": []
    },
    "test:watch": {
      "cache": false
    },
    "prisma:generate": {
      "cache": false
    },
    "prisma:push": {
      "cache": false
    },
    "prisma:seed": {
      "cache": false
    }
  }
}